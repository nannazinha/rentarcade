
<div class="container">
  <div class="form-wrapper" style="width: 500px; margin: 0 auto;">
    <h1>Alugar item</h1>
    <br>
    <p> <%= @item.game_title %></p>
    <p> <%= @item.console_model %></p>
    <p> <%= @item.category %></p>
    <p> R$ <%= @item.price %> / dia</p>
    <br>
    <%= simple_form_for [@item, @transaction] do |f| %>
      <%= f.input :start_date, as: :string, required: false, input_html: {id: "range_start"}%>
      <%= f.button :submit, class: "btn btn-primary"%>
    <% end %>
  </div>
</div>

