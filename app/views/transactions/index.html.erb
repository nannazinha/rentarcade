<div class="container products-container  bg-white">
  <div id="typed-strings">
      <p>Reservas_</p>
  </div>
  <span id="typed"></span>

  <div class="container bg-white justify-content-center">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col" class="table-title">ID</th>
          <th scope="col" class="table-title">CONSOLE</th>
          <th scope="col" class="table-title">JOGO</th>
          <th scope="col" class="table-title">VALOR</th>
          <th scope="col" class="table-title"></th>
        <br>
        </tr>
      </thead>
      <tbody>
        <% @current_user.transactions.each do |transaction| %>
          <tr>
            <th scope="row"><%= transaction.id %></th>
            <td><%= transaction.item.console_model %></td>
            <td><%= transaction.item.game_title %></td>
            <td>R$<%= transaction.cost %></td>
            <td><a><%= link_to "Detalhes", confirmed_path(transaction.item, transaction), class: "btn btn-outline-success" %></a></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
