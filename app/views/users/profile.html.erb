<div class="container">
  <div class="row p-10">
    <div class="col-4 border m-10 profile-cont">
      <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{current_user.email.split("@").first}", class: 'profile-pic'%>
      <h3 class="align-text-center"><%= current_user.first_name %> <%= current_user.last_name %></h3>
        <p><%= current_user.address %></p>
    </div>
    <div class="col-7 p-10 profile-cont" style="margin-left: 10px;">
          <% current_user.reviews.each do |review|  %>
      <div class="card-product mb-2">
          <img src="<%= review.item.photo %>" />
          <div class="card-product-infos">
          <% if review.item.game_title == '' %>
            <h4><%= review.item.console_model %></h4>
          <% else %>
            <h4><%= review.item.game_title %></h4>
          <% end %>
            <p style="font-size: 15px;">
              <%= review.content %>
              <% review.rating.times do %>
                ‚≠ê
              <%end%>
            </p>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>
