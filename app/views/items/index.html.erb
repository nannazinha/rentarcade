<div class="container">
  <div class="py-3">
    <p>Filtre por <%= link_to 'Console', @item, class: 'btn btn-outline-success' %></p>
  </div>
  <div class="cards">
    <% @items.each do |item| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
      <%= link_to item.console_model, item_path(item) %>
    </div>
    <% end %>
  </div>
</div>



<% @items.each do |item| %>
  <% if item.game_title == "" %>
    <h2><%= link_to item.console_model, item_path(item) %><h2>
  <% else %>
    <h2><%= link_to item.game_title, item_path(item) %></h2>
  <% end %>
  <% if item.game_title == "" %>
    <h3><%= "" %><h2>
  <% else %>
    <h3>Console: <%= item.console_model %></h3>
  <% end %>
  <p>Categoria: <%= item.category %></p>
  <p>R$<%= item.price %> / dia</p>
  <br>
<% end %>






